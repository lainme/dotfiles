#关闭启动信息和响铃
startup_message off
vbell off

#utf8
defutf8 on

#状态栏
caption always "%{=b g}%-w%{=rb wg} %n %t %{-}%+w"

#动态窗口
hardstatus off
hardstatus string "screen: %t"
termcapinfo xterm* 'hs:ts=\E]0;:fs=\007:ds=\E]0;\007'

#退出时刷新窗口
altscreen on

#切换时刷新screen
partial on

#256色支持
term screen-256color
defbce "on"

#快捷键
bindkey "^[[1;3A" prev
bindkey "^[[1;3B" next

#滚屏
termcapinfo xterm* ti@:te@
